<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.roberthernandez.testapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/chinese_coin"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- This provides a hackish way of creating a splash screen that immediately calls the
        main activity that can be displayed before the whole app initializes -->
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Actual main activitiy -->
        <activity android:name=".HomeScreen"></activity>
    </application>

</manifest>